{
  "$schema": "https://turborepo.org/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "next-env.d.ts",
        ".output/**",
        ".vercel/output/**"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "lint": {
      "dependsOn": ["build"],
      "outputs": ["node_modules/.cache/.eslintcache"]
    },
    "clean": {
      "cache": false
    },
    "@buildit/db#local": {
      "cache": false
    },
    "db:local": {
      "dependsOn": ["@buildit/db#local"],
      "cache": false
    },
    "@buildit/web#dev": {
      "cache": false
    },
    "web": {
      "dependsOn": ["@buildit/web#dev"],
      "cache": false
    },
    "dx": {
      "dependsOn": ["db:local", "web"],
      "cache": false
    }
  },
  "globalEnv": [
    "DATABASE_URL",
    "DATABASE_AUTH_TOKEN",
    "AUTH_SECRET",
    "GITHUB_CLIENT_ID",
    "GITHUB_CLIENT_SECRET"
  ]
}
